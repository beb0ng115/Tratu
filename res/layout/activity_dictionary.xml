<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#555"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dicHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="               Merriam - Webster"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/dicLogoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText android:text="EditText"
                android:id="@+id/auCTVInput"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.48"
                android:ems="10" >

                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/imgVSound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/button_audio_normal" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.99"
                android:src="@drawable/button_cancelsearch_normal"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f00"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgVLogo"
            android:layout_width="wrap_content"
            android:layout_height="397dp"
            android:layout_weight="1.04"
            android:src="@drawable/img_logo" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2012 Merrian - Webster, Inc"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tvMeans"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.04"
            android:text="TextView"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
